<% include public/head %>
<body>
<% include public/nav %>

<% if(success){ %>
<span ><%=success%></span>
<% }else{ %>
<span>用户创建失败</span>
<%  } %>

<% if(!users.length){ %>
<h3>亲～，还没有用户注册哦～</h3>
<%  }else{  %>
<table class="table table-striped table-hover text-left" style="margin-top:40px">
    <thead>
    <tr>
        <th class="col-md-2">#UID</th>
        <th class="col-md-4">USERNAME</th>
        <th class="col-md-4">PASSWORD</th>
        <th class="col-md-2"></th>
    </tr>
    </thead>
    <tbody>
    <%  users.forEach(function(user){  %>
    <tr>
        <td>1</td>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td>
            <a href="/admin/users/delete/<%= user._id %>" onclick="confirm('你确定要删除吗？');"><button class="btn btn-warning btn-xs">删除</button></a>
        </td>
    </tr>
 <% }) %>
    </tbody>
</table>
<% } %>
  <% include public/foot %>